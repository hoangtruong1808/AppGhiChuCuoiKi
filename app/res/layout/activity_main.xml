<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Sổ Tay Điện Tử"
            android:textColor="#018EE5"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/id_phone_edt"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Số Điện Thoại"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#959292" />

        <Button
            android:id="@+id/id_login_btn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_button_bg"
            android:text="Đăng Nhập"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_register_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:text="@string/txtRegis"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Đăng nhập bằng"
            android:textColor="#000000" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/id_loginGmail_btn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/id_loginZalo_btn"
            android:layout_width="265dp"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_play_zalo"
            android:text="Đăng Nhập"
            android:background="@color/zalosdk_white"
            android:textColor="#238ecc"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/id_loginFacebook_btn"
            android:layout_width="265dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Phát triển: Hiếu Tạ"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic"></TextView>
    </LinearLayout>

</ScrollView>
